<table id="table">
    <caption>Movies and Their Genres</caption>
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>

    {{#each table}}
    <tr> 
        <td>{{this.title}}</td>
        <td>{{this.type}}</td>
    </tr>
    {{/each}}
</table>

<br><br>

<form action="/addMovieGenre" method="post">
    <fieldset>
        <legend>Add Genre To Movie</legend>
        Movie:<select name="movie_id">
            {{#each rowName}}
            <option name="movie_id" value="{{this.movie_id}}">{{this.title}}</option>
            {{/each}}
        </select>
        
        Genre:<select name="genre_id">
            {{#each row2Name}}
            <option name="genre_id" value="{{this.genre_id}}">{{this.type}}</option>
            {{/each}}
        </select>
        
        <input type="submit" value="Submit">
    </fieldset>
</form>

<form action="/searchMovieGenre" method="post">
    <fieldset>
        <legend>Look up Movies by Genre</legend>
        Genre:<select name="genre_id">
            {{#each row2Name}}
            <option name="genre_id" value="{{this.genre_id}}">{{this.type}}</option>
            {{/each}}
        </select>      
        <input type="submit" value="Submit">
    </fieldset>
</form>