<table id="table">
    <caption>Movie Production Companies</caption>
    <tr>
        <th>Name</th>
        <th>CEO</th>
        <th>Headquarters</th>
    </tr>

    {{#each table}}
    <tr> 
        <td>{{this.name}}</td>
        <td>{{this.ceo_f_name}} {{this.ceo_l_name}}</td>
        <td>{{this.hq_city}}, {{this.hq_state}}</td>
    </tr>
    {{/each}}
</table>

<br><br>

<form action="/addProductionCo" method="post">
    <fieldset>
        <legend>Add Production Company</legend>
        Name:<input type="text" name="name" id="name"><br>
        CEO First Name:<input type="text" name="ceo_f_name" id="ceo_f_name"><br>
        CEO Last Name:<input type="text" name="ceo_l_name" id="ceo_l_name"><br>
        Headquarters City:<input type = "text" name="hq_city" id="hq_city"><br>
        Headquarters State:<input type = "text" name="hq_state" id="hq_state"><br>
        <input type="submit" value="Submit">
    </fieldset>
</form>

<form action="/updateProductionCoPage" method="post">
    <fieldset>
        <legend>Update a Production Company</legend>    
        Company to Update:<select name="production_co_id">
            {{#each rowName}}
            <option name="production_co_id" value="{{this.production_co_id}}">{{this.name}}</option>
            {{/each}}
        </select>      
        <input type="submit" value="Submit">
    </fieldset>
</form>